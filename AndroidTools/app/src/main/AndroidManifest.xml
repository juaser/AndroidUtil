        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowAppInfoActivity"
            android:label="@string/label_appinfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TestActivity"
            android:label="@string/label_test"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.AnimationActivity"
            android:label="@string/label_animations"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CustomViewActivity"
            android:label="@string/label_customview"
