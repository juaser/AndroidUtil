<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zxl.androidtools">


    <!--往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!--联网权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Splash_Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ShowAppInfoActivity"
            android:label="@string/label_appinfo" />
        <activity
            android:name=".TestActivity"
            android:label="@string/label_test" />
        <activity
            android:name=".ui.AnimationActivity"
            android:label="@string/label_animations" />
        <activity
            android:name=".ui.CustomViewActivity"
            android:label="@string/label_customview" />
        <activity
            android:name=".ui.SystemViewActivity"
            android:label="@string/label_systemview" />
        <!--自定义View-->
        <activity
            android:name=".ui.customviews.SwitchButtonActivity"
            android:label="@string/label_switch" />
        <activity
            android:name=".ui.customviews.FlowLayoutActivty"
            android:label="@string/label_flow" />
        <activity
            android:name=".ui.customviews.MarqueeActivity"
            android:label="@string/label_marquee" />
        <activity
            android:name=".ui.customviews.CircleWaveActivity"
            android:label="@string/label_circlewave" />
        <activity
            android:name=".ui.customviews.CalendarActivity"
            android:label="@string/label_calendar" />
        <activity
            android:name=".ui.customviews.ProgessActivity"
            android:label="@string/label_progress" />
        <activity
            android:name=".ui.customviews.TestWebViewActivity"
            android:label="@string/label_testwebview" />
        <activity
            android:name=".ui.customviews.RippleActivity"
            android:label="@string/label_ripple" />
        <activity
            android:name=".ui.customviews.DrawBoardActivity"
            android:label="@string/label_drawboard"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.customviews.ArcActivity"
            android:label="@string/label_arcring" />
        <activity
            android:name=".ui.customviews.FlowCharActivity"
            android:label="@string/label_flowchar" />
        <!--动画效果-->
        <activity
            android:name=".ui.animations.BaseAnimationActivity"
            android:label="@string/label_base_animation" />
        <activity
            android:name=".ui.animations.Add2CartActivity"
            android:label="@string/label_add2cart" />
        <activity
            android:name=".ui.animations.JitterViewActivity"
            android:label="@string/label_jitter" />
        <activity
            android:name=".ui.animations.ExplosionParticleActivity"
            android:label="@string/label_explosionparticle" />
        <activity
            android:name=".ui.animations.BubbleActivity"
            android:label="@string/label_bubble" />

        <!--系统的View-->
        <activity
            android:name=".ui.systemviews.TabLayoutActivity"
            android:label="@string/label_tablayout" />
        <activity
            android:name=".ui.systemviews.DrawerLayoutActivity"
            android:label="@string/label_drawerlayout" />
        <activity
            android:name=".ui.systemviews.CoordinatorLayoutActivity"
            android:label="@string/label_coordinatorlayout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.systemviews.VectorActivity"
            android:label="@string/label_vector" />
        <activity
            android:name=".ui.systemviews.ImmersiveActivity"
            android:label="@string/label_immersive" />
        <activity
            android:name=".ui.systemviews.FullScreenActivity"
            android:label="@string/label_fullscreen" />
        <activity
            android:name=".ui.systemviews.CardViewPagerActivity"
            android:label="@string/label_card_viewpager" />
        <activity
            android:name=".ui.systemviews.EditStatusColorActivity"
            android:label="@string/label_statuscolor" />

        <activity android:name=".ui.testgroup.TestSchemeResultActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/str_scheme_testscheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>