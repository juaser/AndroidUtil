            android:name=".ui.systemviews.TabHostActivity"
            android:label="@string/label_tabhgost"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.testgroup.TestSchemeResultActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/str_scheme_testscheme" />
            </intent-filter>
